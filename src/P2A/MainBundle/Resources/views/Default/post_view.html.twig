{% extends "::base.html.twig" %}

{% block body %}
    <div class="linebordertop"></div>
    <div class="topheader"></div>
    <div class="lineborderbottom"></div>

    {% include "P2AMainBundle:Common:header.html.twig" %}
    <div class="body">
    <div class="container">
    <!-- SLIDER -->
    <div class="row-fluid">

        <div class="text-center">
            <img src="/img/sha.png" class="slidershadowcam" alt="">
        </div>
    </div>
    <!-- INTRO  -->
    <div class="row-fluid text-center intro">
        <div class="span12" style="text-align: left">

            <h1 class="blue">
                {{ post.getTitleLang(app.request.get('_locale')) }} - {{ post.getLocationLang(app.request.get('_locale'))|raw  }}
                <a href="{{ path('postuler') }}?keepThis=true&TB_iframe=truewidth=700" class="btn btn-warning thickbox" style="float: right">{% trans %}Postuler{% endtrans %}</a>
            </h1>
            <p>
            <h4>{% trans %}Description du poste{% endtrans %}</h4>
            {{ post.getDescriptionLang(app.request.get('_locale'))|raw  }}
            </p>
            <p>
            <h4>{% trans %}Responsabilité{% endtrans %}</h4>
            {{ post.getResponsabilityLang(app.request.get('_locale'))|raw  }}
            </p>
            <p>
            <h4>{% trans %}Profil{% endtrans %}</h4>
            {{ post.getProfileLang(app.request.get('_locale'))|raw  }}
            </p>

            <div style="float: left">
                <div style="float: left;">
                    <h4>{% trans %}Type d'emploi{% endtrans %}</h4>
                    {{ post.getCategoryLang(app.request.get('_locale'))|raw  }}
                </div>
                <div style="float: left;margin-left: 20px">
                    <h4>{% trans %}Lieu{% endtrans %}</h4>
                    {{ post.getLocationLang(app.request.get('_locale'))|raw  }}
                </div>
                <div style="float: left;margin-left: 20px">
                    <h4>{% trans %}Salaire{% endtrans %}</h4>
                    {{ post.salaire|raw  }}
                </div>
                <div style="float: left;margin-left: 20px">
                    <h4>{% trans %}Contact{% endtrans %}</h4>
                    {{ post.contact|raw  }}
                </div>
                <div style="float: left;margin-left: 20px">
                    <h4>{% trans %}Contrat{% endtrans %}</h4>
                    {{ post.typeContrat|raw  }}
                </div>
                <div style="float: left;margin-left: 20px">
                    <h4>{% trans %}Date de début{% endtrans %}</h4>
                    {{ post.dateStart|date('d/m/Y')  }}
                </div>

                <br style="clear: both"/>
                <br style="clear: both"/>
                <br style="clear: both"/>

        </div>
    </div>

    <div class="clearfix">
    </div>
    <br/>

    <div class="clearfix">
    </div>


    </div><!-- /.container -->
    </div><!-- /.body -->
    {% include "P2AMainBundle:Common:footer.html.twig" %}

    <script type="text/javascript">
        $(document).ready(function(){

            $('#search1').click(function(){

                $.ajax({
                   url: "{{ path('search') }}",
                   data: $('form').serialize(),
                   type: 'POST',
                   success: function(data){

                        $('.result').html(data);

                   }
                });

                return false;


            });

        });
    </script>
{% endblock %}
