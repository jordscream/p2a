{% extends "::base.html.twig" %}

{% block body %}
    <div class="linebordertop"></div>
    <div class="topheader"></div>
    <div class="lineborderbottom"></div>

    {% include "P2AMainBundle:Common:header.html.twig" %}
    <div class="body">
    <div class="container">
    <!-- SLIDER -->
    <div class="row-fluid">

        <div class="text-center">
            <img src="/img/sha.png" class="slidershadowcam" alt="">
        </div>
    </div>
    <!-- INTRO  -->
    <div class="row-fluid text-center intro">
        <div class="span12" style="text-align: left">
            <h1>{{ article.getTitleLang(app.request.get('_locale')) }}</h1>
            <p class="featured lead bottom10">
                {{ article.getDescriptionLang(app.request.get('_locale'))|raw }}
            </p>

           {% if (article.blockName == 'candidats') %}
               <form class="form-inline">
                   <input type="text" class="input" placeholder="Mot clés" name="search">
                   <select name="category">
                       <option value="">Toutes les catégories</option>
                       {% for category in categories %}
                           <option value="{{ category.id }}">{{ category }}</option>
                       {% endfor %}
                   </select>
                   <select name="location">
                       <option value="">N'importe ou</option>
                       {% for location in locations %}
                           <option value="{{ location.id }}">{{ location }}</option>
                       {% endfor %}
                   </select>
                   <br/><br/>
                   <input type="checkbox" value="CDI" name="type" /> CDI &nbsp;&nbsp;
                   <input type="checkbox" value="CDD" name="type" /> CDD &nbsp;&nbsp;
                   <input type="checkbox" value="Intérim" name="type" /> Itérim &nbsp;&nbsp;
                   <input type="checkbox" value="Emploi formation" name="type" /> Emploi formation &nbsp;&nbsp;
                   <input type="checkbox" value="Stage" name="type" /> Stage &nbsp;&nbsp;
                   <button id="search" type="button" class="btn">Rechercher un poste</button>
               </form>
           {% endif %}

            <div class="result">

            </div>

        </div>
    </div>

    <div class="clearfix">
    </div>
    <br/>

    <div class="clearfix">
    </div>


    </div><!-- /.container -->
    </div><!-- /.body -->
    {% include "P2AMainBundle:Common:footer.html.twig" %}

    <script type="text/javascript">
        $(document).ready(function(){

            $('#search').click(function(){

                $.ajax({
                   url: "{{ path('search') }}",
                   data: $('form').serialize(),
                   type: 'POST',
                   success: function(data){

                        $('.result').html(data);

                   }
                });


            });

        });
    </script>
{% endblock %}
